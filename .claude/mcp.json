        "agents_summary": {
          "description": "エージェント・コマンドのサマリー情報"
        }
      }
    },
    "ccagi-universe": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/ccagi-universe.js"
      ],
      "disabled": false,
      "description": "CCAGI Universe - 複数プロジェクト統括・θ₃ Universe Allocator・Cross-Project Communication",
      "tools": {
        "universe_register": {
          "description": "プロジェクトをUniverseに登録"
        },
        "universe_list": {
          "description": "登録済みプロジェクト一覧"
        },
        "universe_get": {
          "description": "プロジェクト詳細を取得"
        },
        "universe_update": {
          "description": "プロジェクト情報を更新"
        },
        "universe_unregister": {
          "description": "プロジェクトをUniverseから削除"
        },
        "allocator_request": {
          "description": "リソース割り当てをリクエスト (θ₃)"
        },
        "allocator_release": {
          "description": "リソース割り当てを解放"
        },
        "allocator_status": {
          "description": "リソース割り当て状況を確認"
        },
        "allocator_optimize": {
          "description": "リソース配分を最適化 (θ₃ Rebalancing)"
