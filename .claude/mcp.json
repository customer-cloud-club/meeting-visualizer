        "context_global_set": {
          "description": "グローバルコンテキストを設定"
        },
        "context_global_get": {
          "description": "グローバルコンテキストを取得"
        },
        "context_global_list": {
          "description": "グローバルコンテキスト一覧"
        },
        "universe_broadcast": {
          "description": "全プロジェクトにブロードキャスト"
        },
        "universe_send": {
          "description": "特定プロジェクトにメッセージ送信"
