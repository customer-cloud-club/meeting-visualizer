        "universe_receive": {
          "description": "プロジェクトのメッセージを受信"
        },
        "universe_status": {
          "description": "Universe全体の状態を取得"
        },
        "universe_discover": {
          "description": "ローカルのCCAGIプロジェクトを検出"
        }
      }
    }
